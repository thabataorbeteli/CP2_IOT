@{
    Layout = "_Layout.cshtml";
}

@model List<Cachorro>

@{
    ViewData["Title"] = "Raças de Cachorro";
}

@section Banner {
    <div class="alert alert-info text-center">
        Conheça as diferentes raças de cachorro disponíveis!
    </div>
}

<h1>Raças de Cachorro</h1>

<mensagem texto="@TempData["msg"]" class="alert alert-danger"></mensagem>

<a asp-action="Cadastrar" class="btn btn-sm btn-outline-danger">Cadastrar Nova Raça</a>

<table class="table">
    <thead>
        <tr>
            <th>Nome</th>
            <th>Origem</th>
            <th>Tamanho</th>
            <th>Grupo</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var cachorro in Model)
        {
            <tr>
                <td>@cachorro.Nome</td>
                <td>@cachorro.Origem</td>
                <td>@cachorro.Tamanho</td>
                <td>@cachorro.Grupo</td>
                <td>
                    <a asp-action="Editar" asp-route-id="@cachorro.CachorroId" class="btn btn-sm btn-outline-primary">Editar</a>
                    <button type="button" class="btn btn-sm btn-outline-danger" data-bs-toggle="modal" data-bs-target="#exampleModal-@cachorro.CachorroId">Remover</button>
                </td>
            </tr>
        }
    </tbody>
</table>

@foreach (var cachorro in Model)
{
    <div class="modal fade" id="exampleModal-@cachorro.CachorroId" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Confirmação</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    Deseja realmente apagar a raça de cachorro <strong>@cachorro.Nome</strong>?
                </div>
                <div class="modal-footer">
                    <form asp-action="Remover" method="post">
                        <input type="hidden" name="id" value="@cachorro.CachorroId" />
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Não</button>
                        <button type="submit" class="btn btn-danger">Sim</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
}
